<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/color_fdfaf7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_onboard_one"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/onboard_animation_one" />

    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="36dp"
        android:background="@color/color_373134" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/color_222222"
        android:gravity="center"
        android:text="@string/onboard_randing_one_first_text"
        android:textSize="25sp" />

    <TextView
        android:textColor="@color/color_222222"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/onboard_randing_one_second_text"
        android:textSize="25sp" />

</LinearLayout>