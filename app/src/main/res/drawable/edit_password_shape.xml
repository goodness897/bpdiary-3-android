<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <size android:width="@dimen/edit_change_password_width" android:height="@dimen/edit_change_password_height" />
            <stroke android:width="1dp" android:color="#555053" />
            <corners android:radius="@dimen/edit_shape_radius" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <size android:width="@dimen/edit_change_password_width" android:height="@dimen/edit_change_password_height" />
            <stroke android:width="1dp" android:color="#d7d5d6" />
            <corners android:radius="@dimen/edit_shape_radius" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
</selector>