<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 평상시 -->
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/color_4c4649" />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_2a2729" />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <!-- 입력정보의 조건이 맞지않을 때 -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/color_e5e1db" />
            <corners android:radius="100dp" />
        </shape>
    </item>


</selector>
