<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_33000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp">

        <LinearLayout
            android:id="@+id/ll_btn_area"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_close_date"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_close_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/common_txt_close"
                    android:textColor="@color/color_4b413d"

                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/color_ededed" />

            <LinearLayout
                android:id="@+id/btn_close"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/common_txt_close"
                    android:textColor="@color/color_4b413d"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/ll_btn_area"
            android:background="@color/color_f1f1f1" />

        <LinearLayout
            android:id="@+id/common_default_dialog_llayout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/iv_line"
            android:background="@drawable/shape_event_popup_background"
            android:orientation="vertical">

            <WebView
                android:id="@+id/wv_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>