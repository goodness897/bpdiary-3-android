<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fbfbfb"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_navi_cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weight_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/weight_title"
                android:textColor="@color/color_222222"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/et_weight_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="45dp"
                android:maxLength="5"
                android:background="@drawable/shape_round_input"
                android:gravity="center"
                android:hint="@string/weight_hint"
                android:inputType="numberDecimal"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_bab9b9"
                android:textSize="16sp">
                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btn_weight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_round_three_select_input"
                android:text="@string/btn_input"
                android:textAlignment="center"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>