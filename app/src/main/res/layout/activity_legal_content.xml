<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_setting_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fbfbfb"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- 광고 레이아웃 -->
    <LinearLayout
        android:id="@+id/ll_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_000000"
        android:layout_alignParentBottom="true"
        android:visibility="visible" >
        <include
            android:id="@+id/layout_ads"
            layout="@layout/layout_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_efebe6"
        android:layout_below="@id/layout_toolbar"/>

    <RelativeLayout
        android:id="@+id/llayout_setting_list_bpdiary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@drawable/layout_selector"
        android:layout_below="@id/view_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:layout_marginTop="11dp"
            android:text="@string/setting_terms_of_use"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/color_efebe6"
        android:layout_below="@id/llayout_setting_list_bpdiary"/>

    <RelativeLayout
        android:id="@+id/llayout_setting_list_person_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@drawable/layout_selector"

        android:layout_below="@id/view_line2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:layout_marginTop="11dp"
            android:text="@string/setting_privacy_treatment_policy"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/color_efebe6"
        android:layout_below="@id/llayout_setting_list_person_info"/>


    <RelativeLayout
        android:id="@+id/llayout_setting_list_opensourse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:background="@drawable/layout_selector"
        android:layout_below="@id/view_line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:layout_marginTop="11dp"
            android:text="@string/setting_opensource_license"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_efebe6"
        android:layout_below="@id/llayout_setting_list_opensourse"/>

</RelativeLayout>
