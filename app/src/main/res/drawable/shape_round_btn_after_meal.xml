<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 평상시 -->
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/color_80fbfbfb" />
            <corners android:radius="100dp" />
            <stroke android:color="@color/color_e5e5e5" android:width="1dp"></stroke>
        </shape>
    </item>
    <!-- 클릭했을 때 -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/color_80ffffff"/>
            <stroke android:color="@color/color_f06515" android:width="1dp"></stroke>
        </shape>
    </item>
</selector>
