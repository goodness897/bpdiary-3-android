<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 평상시 -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <shape>
            <!-- 평상시 -->
            <solid android:color="#eeebe6" />
            <stroke android:width="1dp" android:color="@color/color_cac8c3" />
            <corners android:radius="5dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="true" >
        <shape>
            <solid android:color="@color/color_aaa8a3" />
            <corners android:radius="100dp" />
            <stroke android:color="@color/color_cac8c3" android:width="1dp"/>
            <corners android:radius="5dp" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape>
    </item>
</selector>