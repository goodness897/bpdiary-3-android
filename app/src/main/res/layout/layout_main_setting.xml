<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="mainSetting"
            type="kr.co.openit.bpdiary.model.MainSettingModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fbfbfb"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/color_efece8">

            <ImageView
                android:id="@+id/iv_login_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_ex_menu_sns_facebook" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/iv_login_type"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_default_name"
                    android:textColor="@color/color_2b2729"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mspark@openit.co.kr"
                    android:textColor="@color/color_93908c"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_list_edit" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_dad6d0" />

        <GridView
            android:id="@+id/gv_btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f5f3f0"
            android:columnWidth="120dp"
            android:horizontalSpacing="1dp"
            android:listSelector="@color/color_00000000"
            android:numColumns="3"
            android:verticalSpacing="1dp"
            tools:visibility="gone">

        </GridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_dad6d0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_efebe6" />

        <RelativeLayout
            android:id="@+id/rl_online_shop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/layout_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:gravity="center"
                android:text="@string/setting_online_shop"
                android:textColor="@color/color_000000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginRight="27dp"
                android:background="@drawable/ic_device_list" />

        </RelativeLayout>

        <View
            android:id="@+id/iv_online_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:background="@color/color_efebe6" />


        <RelativeLayout
            android:id="@+id/rl_no_ads"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/layout_selector"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:gravity="center"
                android:text="@string/setting_activity_no_ads"
                android:textColor="@color/color_000000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginRight="27dp"
                android:background="@drawable/ic_device_list" />

        </RelativeLayout>


        <View
            android:id="@+id/iv_no_ads"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:background="@color/color_efebe6" />

        <RelativeLayout
            android:id="@+id/rl_raw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/layout_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="@string/setting_legal_content"
                android:textColor="@color/color_000000"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginRight="27dp"
                android:background="@drawable/ic_device_list" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_efebe6" />
    </LinearLayout>
</layout>