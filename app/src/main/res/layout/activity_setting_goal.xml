<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_setting_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fbfbfb"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- 광고 레이아웃 -->
    <LinearLayout
        android:id="@+id/ll_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_000000"
        android:layout_alignParentBottom="true"
        android:visibility="visible" >
        <include
            android:id="@+id/layout_ads"
            layout="@layout/layout_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_toolbar"
        android:layout_marginTop="8dp"
        android:background="@color/color_efebe6" />

    <RelativeLayout
        android:id="@+id/rl_set_goal_bp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_below="@id/iv_line1"
        android:background="@drawable/layout_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="@string/setting_blood_pressure_goal"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_set_goal_bp"
        android:layout_marginLeft="22dp"
        android:background="@color/color_efebe6" />

    <RelativeLayout
        android:id="@+id/rl_set_goal_ws"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_below="@id/iv_line2"
        android:background="@drawable/layout_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="@string/setting_weight_goal"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView

            android:id="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_set_goal_ws"
        android:layout_marginLeft="22dp"
        android:background="@color/color_efebe6" />

    <RelativeLayout
        android:id="@+id/rl_set_goal_glucose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_below="@id/iv_line3"
        android:background="@drawable/layout_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="@string/setting_blood_glucose_goal"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/profile_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:background="@drawable/ic_device_list" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_set_goal_glucose"
        android:background="@color/color_efebe6" />

</RelativeLayout>
