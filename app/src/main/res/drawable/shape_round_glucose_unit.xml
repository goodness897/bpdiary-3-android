<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 평상시 -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_ffffff" />
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="@color/color_d7d5d0"></stroke>
        </shape>
    </item>
    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_f8f7f4" />
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="@color/color_aaa8a3"></stroke>
        </shape>
    </item>
</selector>
