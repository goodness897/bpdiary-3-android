<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_login_or_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/ll_login_navi_back"
                layout="@layout/view_navi_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_password_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_password_search"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_login_navi_back"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/img_start_screen_email" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="@string/common_email_login"
                        android:textColor="@color/color_222222"
                        android:textSize="22sp" />

                </LinearLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/color_222222" />


                <EditText
                    android:id="@+id/et_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/shape_round_input"
                    android:gravity="center"
                    android:hint="@string/common_email_input"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColorHint="@color/color_bab9b9"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/et_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_round_input"
                    android:gravity="center"
                    android:hint="@string/common_password_input"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="@color/color_bab9b9"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_input_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_round_login"
                    android:enabled="false"
                    android:text="@string/common_login"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/sv_email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/ll_signup_navi_back"
                layout="@layout/view_navi_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_signup_navi_back"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_start_screen_signup" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="@string/common_sign_up"
                        android:textColor="@color/color_222222"
                        android:textSize="22sp" />

                </LinearLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/color_222222" />

                <EditText
                    android:id="@+id/et_sign_up_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_round_input"
                    android:gravity="center"
                    android:hint="@string/common_email_input"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/color_222222"
                    android:textColorHint="@color/color_bab9b9"
                    android:textScaleX="1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_sign_up_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_round_input"
                    android:gravity="center"
                    android:hint="@string/common_password_input"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="@color/color_bab9b9"
                    android:textScaleX="1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_sign_up_password_check_input"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_round_input"
                    android:gravity="center"
                    android:hint="@string/common_password_input_check"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="@color/color_bab9b9"
                    android:textScaleX="1"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_email_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_round_login"
                    android:enabled="false"
                    android:text="@string/common_email_sign_up"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_password_tool_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="65dp"
                    android:background="@drawable/shape_tooltip_triangle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="38dp"
                    android:background="@drawable/shape_tooltip_box">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/common_password_tool_tip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_password_check_tool_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="273dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="65dp"
                    android:background="@drawable/shape_tooltip_triangle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="38dp"
                    android:background="@drawable/shape_tooltip_box">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/common_password_check_tool_tip"
                        android:textColor="@color/color_ffffff"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_login_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            android:id="@+id/ll_navi_back"
            layout="@layout/view_navi_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_join_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_join_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="22sp" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/color_222222" />

            <Button
                android:id="@+id/btn_google_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_round_google"
                android:text="@string/common_google"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_facebook_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_round_facebook"
                android:text="@string/common_facebook"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_email_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_round_email"
                android:text="@string/common_email"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>


    <include
        android:id="@+id/ll_terms"
        layout="@layout/layout_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ad_llayout" />

    <!-- 광고 레이아웃 -->
    <LinearLayout
        android:id="@+id/ad_llayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:gravity="center">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/google_ad_mob_key" />
    </LinearLayout>

</RelativeLayout>