<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#e5e1db" />
            <size android:width="308dp" android:height="46dp" />
            <corners android:radius="100dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="#4c4649" />
            <size android:width="308dp" android:height="46dp" />
            <corners android:radius="100dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>

    <item  android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#2a2729" />
            <size android:width="@dimen/btn_account_width" android:height="@dimen/btn_account_height" />
            <corners android:radius="100dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
</selector>
