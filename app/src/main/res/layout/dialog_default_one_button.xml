<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content">

        <!-- 타이틀 텍스트 -->
        <TextView
            android:id="@+id/common_default_dialog_txt_title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/popup_title"
            android:gravity="center_vertical|left"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:text="@string/dialog_title"
            android:textColor="@color/color_2b2729"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/common_default_dialog_llayout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/common_default_dialog_txt_title"
            android:background="@drawable/img_popbg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_default_dialog_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:maxLines="10"
                android:textColor="@color/color_555053"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/common_default_dialog_llayout_content"
            android:background="@drawable/shape_dialog_line" />

        <LinearLayout
            android:id="@+id/common_default_dialog_llayout_close"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/common_default_dialog_llayout_content"
            android:background="@drawable/popup_button"
            android:orientation="horizontal">

            <!-- close 버튼 -->
            <TextView
                android:id="@+id/common_default_dialog_txt_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_input_one_button"
                android:gravity="center_vertical|right"
                android:paddingRight="40dp"
                android:text="@string/dialog_button"
                android:textColor="@color/color_222222"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>